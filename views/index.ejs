<%- include("partials/header.ejs") %>;

<!DOCTYPE html>
<html>
<head>
    <title>To-Do List</title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">
            <%= day %> 
        </h1>

        <div class="outer">
            <div class="bodyy">
              <% if (locals.tasks) { %>
                  <% for( let i = 0; i < tasks.length; i++ ) { %>
                  <div class="items item">
                    <li>
                     <input type="checkbox">
                     <label for="c">
                         <%= tasks[i] %>
                     </label>
                    </li>
                  </div>
                  <% } %>
             <%  } %>
             <form action="/" method="post" class="item">
                 <input type="text" name="task" id="to-do" placeholder="New Item">
                 <input type="submit" value="+">
             </form>
            </div>
         
            <br>
         
            <div class="menu-buttons">
                <a href="/submit" class="btn btn-primary new-menu-button">Save Present List to Menu</a>
                <a href="/menu" class="btn btn-success new-menu-button">View Saved Menus</a>
            </div>
        </div>
        
    </div>
</body>
</html>

<%- include("partials/footer.ejs") %>
